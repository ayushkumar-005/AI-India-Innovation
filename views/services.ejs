<!DOCTYPE html>
<html lang="en" class="h-full">
    <%- include('partials/head') %>
    <body class="bg-matte-black text-white font-sans flex flex-col min-h-full">
        <%- include('partials/navbar') %>

        <main class="flex-grow w-full">
            <div class="border-b border-slate-grey">
                <div class="max-w-7xl mx-auto px-4 py-16">
                    <p class="font-mono text-terminal-green text-sm mb-2">
                        > INITIALIZING_SERVICES...
                    </p>
                    <h1
                        class="text-4xl md:text-6xl font-bold font-sans uppercase tracking-tighter"
                    >
                        Service <span class="text-gray-600">Architecture</span>
                    </h1>
                </div>
            </div>

            <div class="max-w-7xl mx-auto px-4 py-12 space-y-24">
                <% services.forEach((service, index) => { %>
                <div class="flex flex-col md:flex-row gap-12 items-start group">
                    <div
                        class="w-full md:w-1/3 border-t-2 border-slate-grey pt-4 <%= index % 2 === 1 ? 'md:order-last' : '' %>"
                    >
                        <div
                            class="font-mono text-sm <%= service.color %> mb-4"
                        >
                            <%= service.subtitle %>
                        </div>
                        <h2 class="text-3xl font-bold mb-6">
                            <%= service.title %>
                        </h2>

                        <ul class="space-y-2 font-mono text-xs text-gray-500">
                            <% service.tech_specs.forEach(spec => { %>
                            <li class="flex items-center gap-2">
                                <span
                                    class="w-1 h-1 bg-white rounded-full"
                                ></span>
                                <%= spec %>
                            </li>
                            <% }) %>
                        </ul>
                    </div>

                    <div
                        class="w-full md:w-2/3 bg-gray-900 border border-slate-grey rounded-lg p-8 hover:border-white transition duration-500"
                    >
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                            <div>
                                <div
                                    class="text-xs font-bold text-gray-500 uppercase tracking-widest mb-2 border-b border-gray-700 pb-1"
                                >
                                    Identified_Issue
                                </div>
                                <p class="text-gray-400 leading-relaxed">
                                    <%= service.problem %>
                                </p>
                            </div>

                            <div>
                                <div
                                    class="text-xs font-bold text-gray-500 uppercase tracking-widest mb-2 border-b border-gray-700 pb-1"
                                >
                                    Deployed_Solution
                                </div>
                                <p class="text-white leading-relaxed">
                                    <%= service.solution %>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>

            <div class="border-t border-slate-grey bg-gray-900/50 mt-12">
                <div class="max-w-7xl mx-auto px-4 py-16">
                    <div
                        class="flex flex-col md:flex-row justify-between items-end mb-12"
                    >
                        <div>
                            <h2 class="text-2xl font-bold text-white">
                                ENGINEERING LEADERSHIP
                            </h2>
                            <p class="text-gray-500 text-sm mt-1">
                                Real humans behind the hardware.
                            </p>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
                        <% team.forEach(member => { %>
                        <div class="border border-slate-grey p-4 bg-black">
                            <div
                                class="aspect-square bg-gray-800 mb-4 overflow-hidden grayscale hover:grayscale-0 transition duration-500"
                            >
                                <img
                                    src="<%= member.image %>"
                                    alt="<%= member.name %>"
                                    class="w-full h-full object-cover"
                                />
                            </div>
                            <h3 class="font-bold text-white">
                                <%= member.name %>
                            </h3>
                            <p class="text-terminal-green font-mono text-xs">
                                <%= member.role %>
                            </p>
                        </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </main>

        <%- include('partials/footer') %>
    </body>
</html>
