<!DOCTYPE html>
<html lang="en" class="h-full">
    <%- include('partials/head') %>
    <body class="bg-matte-black text-white font-sans flex flex-col min-h-full">
        <%- include('partials/navbar') %>

        <main class="flex-grow max-w-7xl mx-auto px-4 py-12 w-full">
            <div class="mb-12 border-b border-slate-grey pb-8">
                <h1
                    class="text-3xl md:text-5xl font-bold mb-4 text-center md:text-left"
                >
                    INFRASTRUCTURE
                    <span class="text-safety-orange">OPERATIONS</span>
                </h1>
                <p
                    class="text-gray-400 font-mono text-sm max-w-2xl text-center md:text-left"
                >
                    // FULL_STACK_HARDWARE: From procurement to deployment.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-16">
                <% services.forEach(service => { %>
                <div
                    class="bg-gray-900/50 border border-slate-grey p-6 rounded hover:border-white transition group"
                >
                    <div
                        class="font-mono text-safety-orange text-xs font-bold mb-3 tracking-widest"
                    >
                        <%= service.type %>
                    </div>
                    <h3 class="text-xl font-bold text-white mb-2">
                        <%= service.title %>
                    </h3>
                    <p class="text-gray-400 text-sm mb-4 leading-relaxed">
                        <%= service.description %>
                    </p>
                    <div
                        class="text-xs font-mono text-gray-500 border-t border-gray-800 pt-3"
                    >
                        >> <%= service.details %>
                    </div>
                </div>
                <% }) %>
            </div>

            <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl font-bold text-white">LIVE INVENTORY</h2>
                <span
                    class="text-xs font-mono text-terminal-green animate-pulse"
                    >● SYSTEM_READY</span
                >
            </div>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                <div class="lg:col-span-2 space-y-4">
                    <% inventory.forEach(server => { %>
                    <div
                        class="bg-gray-900 border border-slate-grey p-6 rounded-lg hover:border-safety-orange transition group"
                    >
                        <div
                            class="flex flex-col md:flex-row justify-between md:items-center"
                        >
                            <div>
                                <h3
                                    class="text-xl font-bold font-mono text-white"
                                >
                                    <%= server.name %>
                                </h3>
                                <p class="text-gray-400 text-sm mt-1">
                                    <%= server.specs %>
                                </p>

                                <span
                                    class="inline-block mt-3 px-2 py-1 text-xs font-bold font-mono rounded <%= server.status === 'Available Now' ? 'bg-terminal-green/20 text-terminal-green' : 'bg-red-500/20 text-red-400' %>"
                                >
                                    <%= server.status.toUpperCase() %>
                                </span>
                            </div>

                            <div class="mt-4 md:mt-0 text-right">
                                <p class="text-2xl font-bold text-white">
                                    ₹<%= server.priceHourly %><span
                                        class="text-sm text-gray-500"
                                        >/hr</span
                                    >
                                </p>
                                <button
                                    onclick="selectServer('<%= server.name %>', <%= server.priceHourly %>)"
                                    class="mt-2 bg-slate-grey/30 hover:bg-safety-orange hover:text-black text-white px-4 py-2 rounded text-sm font-bold transition w-full md:w-auto"
                                >
                                    SELECT FOR QUOTE
                                </button>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>

                <div class="lg:col-span-1">
                    <div
                        class="bg-slate-grey/10 border border-slate-grey p-6 rounded-lg sticky top-24"
                    >
                        <h3 class="text-xl font-bold mb-4 font-mono">
                            // RENTAL_CALCULATOR
                        </h3>

                        <form id="calcForm" class="space-y-4">
                            <div>
                                <label class="block text-xs text-gray-500 mb-1"
                                    >SELECTED MODEL</label
                                >
                                <input
                                    type="text"
                                    id="selectedModel"
                                    value="Select a server..."
                                    readonly
                                    class="w-full bg-black border border-slate-grey px-3 py-2 text-white font-mono text-sm rounded focus:outline-none focus:border-safety-orange"
                                />
                                <input
                                    type="hidden"
                                    id="selectedPrice"
                                    value="0"
                                />
                            </div>

                            <div>
                                <label class="block text-xs text-gray-500 mb-1"
                                    >DURATION (HOURS)</label
                                >
                                <input
                                    type="number"
                                    id="hours"
                                    value="24"
                                    min="1"
                                    class="w-full bg-black border border-slate-grey px-3 py-2 text-white font-mono text-sm rounded focus:outline-none focus:border-safety-orange"
                                />
                            </div>

                            <div class="border-t border-slate-grey pt-4 mt-4">
                                <div
                                    class="flex justify-between items-center mb-4"
                                >
                                    <span class="text-gray-400 text-sm"
                                        >ESTIMATED COST</span
                                    >
                                    <span
                                        id="totalCost"
                                        class="text-2xl font-bold text-safety-orange"
                                        >₹0</span
                                    >
                                </div>
                                <button
                                    type="button"
                                    class="w-full bg-safety-orange text-black font-bold py-3 rounded hover:bg-white transition"
                                >
                                    REQUEST BOOKING
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </main>

        <%- include('partials/footer') %>

        <script>
            const modelInput = document.getElementById("selectedModel");
            const priceInput = document.getElementById("selectedPrice");
            const hoursInput = document.getElementById("hours");
            const totalDisplay = document.getElementById("totalCost");

            function selectServer(name, price) {
                modelInput.value = name;
                priceInput.value = price;
                calculate();
                if (window.innerWidth < 1024) {
                    modelInput.scrollIntoView({ behavior: "smooth" });
                }
            }

            function calculate() {
                const price = parseFloat(priceInput.value);
                const hours = parseFloat(hoursInput.value);

                if (price > 0 && hours > 0) {
                    const total = price * hours;
                    totalDisplay.innerText =
                        "₹" + total.toLocaleString("en-IN");
                }
            }

            hoursInput.addEventListener("input", calculate);
        </script>
    </body>
</html>
